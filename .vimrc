set number
syntax on
set showcmd
set mouse=a
set encoding=utf-8
filetype indent on
set autoindent
set expandtab
set cursorline
set nowrap
set noswapfile
set nobackup
set undofile
set directory=~/.vim/.swp//
set undodir=~/.vim/.undo// 
set visualbell
set history=1000
set wildmenu
set wildmode=longest:list,full
set spell spelllang=en_us
set showmatch
set hlsearch
set incsearch
set ignorecase
set ruler
set laststatus=2
set softtabstop=2
set tabstop=2
